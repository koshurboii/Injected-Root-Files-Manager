<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/main_bg"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="4dp"
		android:background="#FF5722"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear_bar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/icon_admin"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:src="@drawable/icon_content_paste"
				android:scaleType="centerInside"
				android:focusable="false" />
			<LinearLayout
				android:id="@+id/linear5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="vertical">
				<HorizontalScrollView
					android:id="@+id/hscroll1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="3dp"
					android:background="@android:color/transparent"
					android:scrollbars="none">
					<LinearLayout
						android:id="@+id/linear3"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:background="@android:color/transparent"
						android:gravity="center_vertical"
						android:orientation="horizontal" />
				</HorizontalScrollView>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/main_bg_2"
			android:layout_width="250dp"
			android:layout_height="350dp"
			android:padding="4dp"
			android:background="#FFFFFF"
			android:orientation="vertical"
			android:clipChildren="true"
			android:clipToPadding="true">
			<LinearLayout
				android:id="@+id/linear4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@android:color/transparent"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/back_btn"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:layout_marginLeft="4dp"
					android:padding="4dp"
					android:src="@drawable/icon_arrow_back_baseline"
					android:scaleType="centerInside"
					android:focusable="false" />
				<LinearLayout
					android:id="@+id/linear6"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginRight="50dp"
					android:orientation="vertical">
					<TextView
						android:id="@+id/textview3"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:paddingLeft="8dp"
						android:paddingTop="8dp"
						android:paddingRight="8dp"
						android:paddingBottom="4dp"
						android:text="/storage/emulated/0/"
						android:textSize="10sp"
						android:textStyle="bold"
						android:textColor="#FF5722"
						android:layout_weight="1"
						android:focusable="false" />
					<TextView
						android:id="@+id/CountInDirectory"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:paddingLeft="8dp"
						android:paddingTop="2dp"
						android:paddingRight="8dp"
						android:paddingBottom="4dp"
						android:text="TextView"
						android:textSize="10sp"
						android:textStyle="italic"
						android:textColor="#FF8A65"
						android:focusable="false" />
				</LinearLayout>
				<ImageView
					android:id="@+id/content_paste"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:padding="15dp"
					android:src="@drawable/icon_content_paste"
					android:scaleType="centerInside"
					android:translationX="-50.0dp"
					android:focusable="false" />
			</LinearLayout>
			<ListView
				android:id="@+id/listview1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="4dp"
				android:background="@android:color/transparent"
				android:choiceMode="none"
				android:scrollbars="none" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
